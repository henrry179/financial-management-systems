{
  "dashboard": {
    "id": null,
    "title": "财务管理系统 - 系统概览",
    "tags": ["financial-system", "overview"],
    "style": "dark",
    "timezone": "Asia/Shanghai",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(kube_pod_info, namespace)",
          "regex": "(production|staging)",
          "current": {
            "selected": true,
            "text": "production",
            "value": "production"
          },
          "includeAll": false,
          "multi": false
        },
        {
          "name": "instance",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(up{job=~\"financial.*\"}, instance)",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "increase(kube_deployment_status_replicas{namespace=\"$namespace\"}[1m])",
          "iconColor": "green",
          "textFormat": "Deployment: {{deployment}}"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "系统状态概览",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=~\"financial-(backend|frontend)\", namespace=\"$namespace\"}",
            "legendFormat": "{{job}} - {{instance}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ]
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "textMode": "auto",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "title": "请求量 (RPS)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"financial-backend\", namespace=\"$namespace\"}[5m])) by (job)",
            "legendFormat": "总请求量",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{job=\"financial-backend\", namespace=\"$namespace\", status=~\"2..\"}[5m])) by (job)",
            "legendFormat": "成功请求",
            "refId": "B"
          },
          {
            "expr": "sum(rate(http_requests_total{job=\"financial-backend\", namespace=\"$namespace\", status=~\"[45]..\"}[5m])) by (job)",
            "legendFormat": "错误请求",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "请求/秒",
            "min": 0
          }
        ],
        "thresholds": [
          {
            "value": 100,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 3,
        "title": "响应时间分布",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"financial-backend\", namespace=\"$namespace\"}[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"financial-backend\", namespace=\"$namespace\"}[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"financial-backend\", namespace=\"$namespace\"}[5m])) by (le))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "时间 (秒)",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "错误率",
        "type": "singlestat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{job=\"financial-backend\", namespace=\"$namespace\", status=~\"[45]..\"}[5m])) / sum(rate(http_requests_total{job=\"financial-backend\", namespace=\"$namespace\"}[5m]))) * 100",
            "refId": "A"
          }
        ],
        "thresholds": "1,5",
        "colorBackground": true,
        "format": "percent",
        "valueName": "current"
      },
      {
        "id": 5,
        "title": "活跃用户数",
        "type": "singlestat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "increase(user_sessions_total{namespace=\"$namespace\"}[1h])",
            "refId": "A"
          }
        ],
        "format": "short",
        "valueName": "current"
      },
      {
        "id": 6,
        "title": "交易处理量",
        "type": "singlestat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "increase(transaction_processed_total{namespace=\"$namespace\"}[1h])",
            "refId": "A"
          }
        ],
        "format": "short",
        "valueName": "current"
      },
      {
        "id": 7,
        "title": "系统负载",
        "type": "singlestat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "avg(node_load1{instance=~\"$instance\"})",
            "refId": "A"
          }
        ],
        "thresholds": "2,4",
        "colorBackground": true,
        "format": "short",
        "valueName": "current"
      },
      {
        "id": 8,
        "title": "数据库连接",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"financial_db\"}",
            "legendFormat": "活跃连接",
            "refId": "A"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "最大连接数",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "连接数",
            "min": 0
          }
        ]
      },
      {
        "id": 9,
        "title": "缓存命中率",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "(redis_keyspace_hits_total / (redis_keyspace_hits_total + redis_keyspace_misses_total)) * 100",
            "legendFormat": "命中率 %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "百分比",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 10,
        "title": "内存使用率",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "((node_memory_MemTotal_bytes{instance=~\"$instance\"} - node_memory_MemAvailable_bytes{instance=~\"$instance\"}) / node_memory_MemTotal_bytes{instance=~\"$instance\"}) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "百分比",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 11,
        "title": "CPU使用率",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 28},
        "targets": [
          {
            "expr": "(1 - rate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$instance\"}[5m])) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "百分比",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 12,
        "title": "磁盘使用率",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 28},
        "targets": [
          {
            "expr": "((node_filesystem_size_bytes{instance=~\"$instance\", fstype!=\"tmpfs\"} - node_filesystem_free_bytes{instance=~\"$instance\", fstype!=\"tmpfs\"}) / node_filesystem_size_bytes{instance=~\"$instance\", fstype!=\"tmpfs\"}) * 100",
            "legendFormat": "{{instance}} - {{mountpoint}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "百分比",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 13,
        "title": "告警状态",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 36},
        "targets": [
          {
            "expr": "ALERTS{namespace=\"$namespace\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "Time": true
              },
              "indexByName": {
                "alertname": 0,
                "alertstate": 1,
                "severity": 2,
                "summary": 3,
                "description": 4
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "alertstate"},
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background",
                    "mode": "basic"
                  }
                },
                {
                  "id": "mappings",
                  "value": [
                    {
                      "options": {
                        "firing": {"color": "red", "index": 0},
                        "pending": {"color": "yellow", "index": 1}
                      },
                      "type": "value"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    ],
    "links": [
      {
        "title": "业务指标仪表板",
        "url": "/d/financial-business",
        "type": "dashboards"
      },
      {
        "title": "基础设施监控",
        "url": "/d/financial-infrastructure",
        "type": "dashboards"
      }
    ]
  }
}