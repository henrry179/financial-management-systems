# 数据库配置
DATABASE_URL="postgresql://financial_user:financial_password@localhost:5432/financial_db"

# Redis配置
REDIS_URL="redis://localhost:6379"

# JWT配置
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="30d"

# 服务器配置
NODE_ENV="development"
PORT=8000
API_VERSION="v1"

# 文件上传配置
UPLOAD_DIR="uploads"
MAX_FILE_SIZE="10485760" # 10MB

# 邮件配置
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@financial.com"

# 云存储配置 (可选)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET="financial-uploads"

# 阿里云OSS配置 (可选)
ALIYUN_ACCESS_KEY_ID=""
ALIYUN_ACCESS_KEY_SECRET=""
ALIYUN_OSS_REGION="oss-cn-hangzhou"
ALIYUN_OSS_BUCKET="financial-uploads"

# 外部API配置
CURRENCY_API_KEY=""  # 汇率API密钥
BANK_API_KEY=""      # 银行接口API密钥

# 日志配置
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# 缓存配置
CACHE_TTL="3600"  # 1小时

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW="15" # 15分钟
RATE_LIMIT_MAX_REQUESTS="100"

# 报告生成配置
REPORT_GENERATION_TIMEOUT="300000"  # 5分钟
REPORT_STORAGE_PATH="reports"

# 任务队列配置
QUEUE_REDIS_URL="redis://localhost:6379/1"

# 监控配置
HEALTH_CHECK_INTERVAL="30000"  # 30秒 